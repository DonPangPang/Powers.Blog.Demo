@using Powers.Blog.Client
@inject NavigationManager NavigationManager

<Layout Class="layout">
<Image Style="position: fixed; z-index: 1; width: 100%;height:200px;" Src="https://tse1-mm.cn.bing.net/th/id/R-C.da64359b5c374cc7b9b523c30d3a167a?rik=pzrvlgv0uK%2fQJg&riu=http%3a%2f%2fimg.51miz.com%2fElement%2f00%2f59%2f42%2f33%2f316b5cc4_E594233_95888c4e.jpg!%2fquality%2f90%2funsharp%2ftrue%2fcompress%2ftrue%2fformat%2fjpg&ehk=dyiZJRS99XhakDqvtgv3nLANxjB%2bWV0%2bAUTfNpILZw4%3d&risl=&pid=ImgRaw&r=0"
       Fallback="data:image/png;base64," />
     <Layout Style="margin-top:200px;">
        <Header Style="position: fixed; z-index: 1; width: 100%; background:white;">
        <Menu Theme="MenuTheme.Light" Mode="MenuMode.Horizontal">
            @foreach(var item in @MenuData)
            {
                <MenuItem Key="@item.Key" OnClick="()=>NavigateTo(item.Path)">@item.Name</MenuItem>
            }
        </Menu>
    </Header>
    
    <Content Style="margin-top:64px;width:70%;padding-left:15%; padding-right:15%;">
        <Sider  Style="position: fixed; z-index: 1;width:200px;margin-top:10px;">
            <Layout>
                <UserInfo></UserInfo>
                @*<Menu Mode="MenuMode.Inline" Style="width:200px;margin-top:10px;">
                @foreach(var item in @MenuData)
                {
                    <MenuItem Key="@item.Key" OnClick="()=>NavigateTo(item.Path)">@item.Name</MenuItem>
                }
                </Menu>*@
                <TagComponent></TagComponent>
                <BackTop Icon="up"></BackTop>
            </Layout>

        </Sider>
        <Layout Style="margin-left:210px;padding-top:5px;">
            @Content
            <Footer Style="text-align: center; ">Ant Design ©2018 Created by Ant UED</Footer>
        </Layout>
    </Content>
    </Layout>
</Layout>

<style>
.site-layout-content {
    /*background: #fff;*/
    padding: 24px;
    min-height: 280px;
}

#components-layout-demo-top .logo {
    width: 120px;
    height: 31px;
    background: red;
    margin: 16px 24px 16px 0;
}
</style>

@code {
    [Parameter]
    public IEnumerable<MenuDataItem> MenuData{ get; set; }

    [Parameter]
    public RenderFragment Content{ get; set; }

    private void NavigateTo(string path) => NavigationManager.NavigateTo(path);
}
